<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CongratulationsActivity"
    android:background="@color/congratulation_background_color"
    >


    <TextView
        android:id="@+id/parabens1"
        android:layout_width="328dp"
        android:layout_height="116dp"
        android:layout_marginTop="220dp"
        android:gravity="center"
        android:text="@string/parabens1"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/parabens2"
        android:layout_width="328dp"
        android:layout_height="116dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/parabens2"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parabens1" />

    <Button
        android:id="@+id/btn_estudar_novamente"
        android:layout_width="239dp"
        android:layout_height="62dp"
        android:layout_marginBottom="72dp"
        android:backgroundTint="@color/button_background_color_black"
        android:text="@string/estudarnovamente"
        android:textColor="@color/btn_text_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="231dp"
        android:layout_height="179dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/podium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>