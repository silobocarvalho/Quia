<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_default">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="114dp"
        android:layout_height="94dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cloud" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="182dp"
        android:layout_height="0dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="474dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_iniciar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/cloud" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="126dp"
        android:layout_height="122dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_enunciado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cloud3png" />

    <TextView
        android:id="@+id/tv_enunciado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Pergunta lorem ipsum et man nain et nain ge"
        android:textAlignment="center"
        android:textColor="@color/background_color_text"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="329dp"
        android:layout_height="386dp"
        android:layout_margin="50dp"
        android:layout_marginTop="24dp"
        android:background="@color/background_color_internal"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_enunciado">


        <RadioButton
            android:id="@+id/rb_opcaoA"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Opção A"
            android:textColor="@color/background_color_text"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_opcaoB"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Opção B"
            android:textColor="@color/background_color_text"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_opcaoC"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Opção C"
            android:textColor="@color/background_color_text"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_opcaoD"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Opção D"
            android:textColor="@color/background_color_text"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_opcaoE"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Opção E"
            android:textColor="@color/background_color_text"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_confirmar"
        android:layout_width="239dp"
        android:layout_height="62dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/button_background_color_black"
        android:text="@string/confirm"
        android:textColor="@color/btn_text_color"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.75" />


</androidx.constraintlayout.widget.ConstraintLayout>